{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["bun-types", "@types/node"]
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "e2e/**/*.ts",
    "playwright.config.ts"
  ]
}
